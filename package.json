{
  "name": "root",
  "private": true,
  "scripts": {
    "develop": "lerna run develop --scope=@apps/web",
    "build": "lerna run build --scope=@apps/web",
    "serve": "lerna run serve --scope=@apps/web",
    "update:dep": "lernaupdate",
    "synchro:dep": "lernaupdate --dedupe",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix --parallel",
    "tsc": "lerna run tsc --parallel"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix && yarn tsc"
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.3.2",
    "@testing-library/user-event": "7.1.2",
    "@types/jest": "25.2.1",
    "@types/node": "13.11.1",
    "@types/react": "16.9.34",
    "@types/react-dom": "16.9.6",
    "@typescript-eslint/eslint-plugin": "2.31.0",
    "@typescript-eslint/parser": "2.31.0",
    "eslint": "6.x",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.19.0",
    "husky": "^4.2.5",
    "jest": "24.9.0",
    "lerna": "3.20.2",
    "lerna-update-wizard": "0.17.8",
    "prettier": "^2.0.5",
    "react-scripts": "3.4.1",
    "ts-jest": "24.0.2",
    "typescript": "3.8.3"
  },
  "workspaces": [
    "packages/shared/*",
    "packages/domains/*",
    "packages/apps/*"
  ]
}
